<% if @results.presence %>
    <div class="row">
      <p>There is
        <%= @results.length %>
        results founded.
      </p>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% @results.each do |result| %>
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <%= link_to fooddrink_path(result.id), :rel => "lightbox", class: "has-tooltip", :data => {:toggle=>"tooltip", :placement=>"auto"}, title: display_info(result) do %>
                    <%= image_tag result.file, class: '' %>
                <% end %>
                <div class="caption center">
                  <label class="food-name">
                    <%= result.name %>
                  </label>
                </div>
              </div>
            </div>
        <% end %>
      </div>

      <div class="col-md-6 col-md-offset-3">
        <%= will_paginate @results %>
      </div>
    </div>
<% else %>
    Result not found.
<% end %>